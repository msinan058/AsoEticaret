@{
    ViewBag.Title = "UyeKayit";
    Layout = "~/Views/Shared/MasterView.cshtml";
}
<script>
    function funcKaydet() {
        var sifre = $("#Sifre").val();
        var sifretekrar = $("#SifreTekrar").val();
        if (sifre.length < 6) {
            alert("Şifre karakteriniz en az 6 haneli olmadır!");
            return;
        }
        else if (sifre != sifretekrar) {
            alert("Şifre ve Şifre Tekrarınız birbirine uymuyor!");
            return;
        }
        //$("#UyeKayitForm").submit();
        $("#btnSubmit").click();
    }
</script>
<div class="container">
    <section class="section-content padding-y bg">
        <h2>Üye Kayıt</h2>
    </section>
    <section id="UyeKayit" class="section-content padding-y bg">
        <form id="UyeKayitForm" method="post" action="~/Hesap/Kaydet">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-xs-6">
                    <div class="row form-group">
                        <div class="col-md-12"><label for="AdSoyad" class="">Ad ve Soyad</label></div>
                        <div class="col-md-12">
                            <input type="text" id="AdSoyad" name="AdSoyad" placeholder="" class="form-control" required />
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-xs-6">
                    <div class="row form-group">
                        <div class="col-md-12"><label for="Email" class="">Email</label></div>
                        <div class="col-md-12">
                            <input type="email" id="Email" name="Email" placeholder="" class="form-control" required />
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-xs-6">
                    <div class="row form-group">
                        <div class="col-md-12"><label for="Telefon" class="">Telefon</label></div>
                        <div class="col-md-12">
                            <input type="tel" id="Telefon" name="Telefon" placeholder="" class="form-control" required />
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-xs-6">
                    <div class="row form-group">
                        <div class="col-md-12"><label for="TC" class="">TC</label></div>
                        <div class="col-md-12">
                            <input type="text" id="TC" name="TC" placeholder="" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-xs-6">
                    <div class="row form-group">
                        <div class="col-md-12"><label for="Sifre" class="">Şifre</label></div>
                        <div class="col-md-12">
                            <input type="password" id="Sifre" name="Sifre" placeholder="" class="form-control" required />
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-xs-6">
                    <div class="row form-group">
                        <div class="col-md-12"><label for="SifreTekrar" class="">Şifre Tekrarı</label></div>
                        <div class="col-md-12">
                            <input type="password" id="SifreTekrar" name="SifreTekrar" placeholder="" class="form-control" required />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-xs-12">
                        <div class="col-lg-12 col-md-12 col-xs-12">
                            <button type="button" id="btnKaydet" value="Kaydet" class="btn btn-primary" onclick="funcKaydet()">Kaydet</button>
                            <button style="display:none;" type="submit" id="btnSubmit"></button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </section>
</div>
